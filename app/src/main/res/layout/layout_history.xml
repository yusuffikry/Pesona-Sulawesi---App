<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hijauKeputihan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/hijauterang"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="8dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilehistory"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/astronout"/>

                <LinearLayout
                    android:layout_marginHorizontal="9dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_historyfullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rafael Struick"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/user_userhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rafaelstruick"
                        android:textColor="@color/black"/>


                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/userimagehistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/post_sulsel"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/usercaptionhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Wonderfull. Amazing Sulawesi Selatan"
                android:textColor="@color/black"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>